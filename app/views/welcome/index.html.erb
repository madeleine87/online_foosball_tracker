<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1>Welcome to Online Foosball Tracker</h1>
			<h3>Steer your team and score goals!</h3>
		</div>
		<div class="col-md-6">
			<img src="../assets/foosball-table.jpg">
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<h3>Top Five Players</h3>
				<table class="table">
				  <thead>
				    <tr>
				      <th>First name</th>
				      <th>Last name</th>
				      <th>Email</th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @players.each do |player| %>
				      <tr>
				        <td><%= player.first_name %></td>
				        <td><%= player.last_name %></td>
				        <td><%= player.email %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
		</div>
		<div class="col-md-6">
			<h3>Last Five Matches</h3>
				<table class="table">
				  <thead>
				    <tr>
				      <th>Date</th>
				      <th>Player A</th>
				      <th>Player B</th>
				      <th>Result A</th>
				      <th>Result B</th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @matches.each do |match| %>
				      <tr>
				        <td><%= match.date %></td>
				        <td><%= match.player_A.first_name unless match.player_A == nil %></td>
				        <td><%= match.player_B.first_name unless match.player_B == nil %></td>
				        <td><%= match.result_player_A %></td>
				        <td><%= match.result_player_B %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
		</div>
	</div>
</div>
