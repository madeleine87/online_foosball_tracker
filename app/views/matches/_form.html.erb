<%= form_for(@match) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :result_player_A %><br>
    <%= f.number_field :result_player_A %>
  </div>
  <div class="field">
    <%= f.label :result_player_B %><br>
    <%= f.number_field :result_player_B %>
  </div>
  <div class="field">
    <%= f.label :player_A_id %><br>
    <%= f.select :player_A_id, Player.all.collect { |p| [ p.first_name, p.id ] }, {include_blank: false}, {:class => "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :player_B_id %><br>
    <%= f.select :player_B_id, Player.all.collect { |p| [ p.first_name, p.id ] }, {include_blank: false}, {:class => "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
